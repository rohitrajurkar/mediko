<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:src="@drawable/hosmed" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/help"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:src="@drawable/help" />

            <ImageView
                android:id="@+id/appSetting"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:src="@drawable/settings" />

            <ImageView
                android:id="@+id/appNotification"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_notifications" />

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/appConsLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar3">

        <ImageView
            android:id="@+id/docappProfile"
            android:layout_width="45dp"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="@id/appConsLayout"
            app:layout_constraintTop_toTopOf="@id/appConsLayout"
            app:srcCompat="@drawable/portfolio" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Profile"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/docappProfile"
            app:layout_constraintStart_toStartOf="@+id/docappProfile"
            app:layout_constraintTop_toBottomOf="@+id/docappProfile" />

        <ImageView
            android:id="@+id/docappConsult"
            android:layout_width="45dp"
            android:layout_height="60dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            app:layout_constraintBottom_toBottomOf="@+id/docappProfile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/docappProfile"
            app:srcCompat="@drawable/talk" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Consult"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/docappConsult"
            app:layout_constraintStart_toStartOf="@+id/docappConsult"
            app:layout_constraintTop_toBottomOf="@+id/docappConsult" />

        <ImageView
            android:id="@+id/docappReach"
            android:layout_width="45dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="@+id/docappProfile"
            app:layout_constraintEnd_toStartOf="@+id/docappConsult"
            app:layout_constraintStart_toEndOf="@+id/docappProfile"
            app:layout_constraintTop_toTopOf="@+id/docappProfile"
            app:srcCompat="@drawable/speaker" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Reach"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/docappReach"
            app:layout_constraintStart_toStartOf="@+id/docappReach"
            app:layout_constraintTop_toBottomOf="@+id/docappReach" />

        <ImageView
            android:id="@+id/docappPatients"
            android:layout_width="45dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="@+id/docappProfile"
            app:layout_constraintStart_toStartOf="@+id/docappProfile"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:srcCompat="@drawable/patience" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="Patients"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/docappPatients"
            app:layout_constraintStart_toStartOf="@+id/docappPatients"
            app:layout_constraintTop_toBottomOf="@+id/docappPatients" />

        <ImageView
            android:id="@+id/docappMedia"
            android:layout_width="45dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="@+id/docappReach"
            app:layout_constraintStart_toStartOf="@+id/docappReach"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:srcCompat="@drawable/media" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Healthfeed"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/docappMedia"
            app:layout_constraintStart_toStartOf="@+id/docappMedia"
            app:layout_constraintTop_toBottomOf="@+id/docappMedia" />

        <TextView
            android:id="@+id/textVerify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
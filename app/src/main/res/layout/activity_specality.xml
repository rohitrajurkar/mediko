<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpecalityActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Search speciality"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnUpload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:text="Save"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/linearSpeciality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/txt_bg"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SELECTED SPECIALITY"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textColor="@color/black"
                    />

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/specialityRecycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/linearSpeciality1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CHOOSE SPECIALITY(MAX 1)"
                    android:textColor="@color/black"
                    android:background="@drawable/txt_bg"
                    android:padding="15dp"
                    />
                <TextView
                    android:id="@+id/sprcialityAurvedic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ayurvedic Practitioner"
                    android:textColor="@color/black"
                    android:background="@drawable/txt_bg_fg"
                    android:drawableRight="@drawable/ic_add_circle"
                    android:padding="15dp"/>
                <TextView
                    android:id="@+id/specialityCardiologist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cardiologist"
                    android:textColor="@color/black"
                    android:background="@drawable/txt_bg_fg"
                    android:drawableRight="@drawable/ic_add_circle"
                    android:padding="15dp"/>

                <TextView
                    android:id="@+id/specialityDietitian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dietitian/Dietician"
                    android:textColor="@color/black"
                    android:background="@drawable/txt_bg_fg"
                    android:drawableRight="@drawable/ic_add_circle"
                    android:padding="15dp"/>
                <TextView
                    android:id="@+id/specialityEndocrinologist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Endocrinologist"
                    android:background="@drawable/txt_bg_fg"
                    android:textColor="@color/black"
                    android:drawableRight="@drawable/ic_add_circle"
                    android:padding="15dp"/>
                <TextView
                    android:id="@+id/specialityEpidemiologist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Epidemiologist"
                    android:textColor="@color/black"
                    android:background="@drawable/txt_bg_fg"
                    android:drawableRight="@drawable/ic_add_circle"
                    android:padding="15dp"/>
                <TextView
                    android:id="@+id/specialityPhysician"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="General Physician"
                    android:textColor="@color/black"
                    android:background="@drawable/txt_bg_fg"
                    android:drawableRight="@drawable/ic_add_circle"
                    android:padding="15dp"/>
                <TextView
                    android:id="@+id/specialityGastroenterologist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gastroenterologist"
                    android:textColor="@color/black"
                    android:background="@drawable/txt_bg_fg"
                    android:drawableRight="@drawable/ic_add_circle"
                    android:padding="15dp"/>
                <TextView
                    android:id="@+id/specialityHomeopathic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Homeopathic Doctor"
                    android:textColor="@color/black"
                    android:background="@drawable/txt_bg_fg"
                    android:drawableRight="@drawable/ic_add_circle"
                    android:padding="15dp"/>
                <TextView
                    android:id="@+id/specialityInternal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Internal Medicine Specialist"
                    android:textColor="@color/black"
                    android:background="@drawable/txt_bg_fg"
                    android:drawableRight="@drawable/ic_add_circle"
                    android:padding="15dp"/>
                <TextView
                    android:id="@+id/specialityMaxillofacial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Maxillofacial Surgeon"
                    android:textColor="@color/black"
                    android:background="@drawable/txt_bg_fg"
                    android:drawableRight="@drawable/ic_add_circle"
                    android:padding="15dp"/>
                <TextView
                    android:id="@+id/specialityNephrologist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nephrologist"
                    android:textColor="@color/black"
                    android:background="@drawable/txt_bg_fg"
                    android:drawableRight="@drawable/ic_add_circle"
                    android:padding="15dp"/>

                <TextView
                    android:id="@+id/specialityNeurologist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Neurologist"
                    android:textColor="@color/black"
                    android:background="@drawable/txt_bg_fg"
                    android:drawableRight="@drawable/ic_add_circle"
                    android:padding="15dp"/>
                <TextView
                    android:id="@+id/specialityNeurosurgeon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Neurosurgeon"
                    android:textColor="@color/black"
                    android:background="@drawable/txt_bg_fg"
                    android:drawableRight="@drawable/ic_add_circle"
                    android:padding="15dp"/>
                <TextView
                    android:id="@+id/specialityNutritionist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nutritionist"
                    android:textColor="@color/black"
                    android:background="@drawable/txt_bg_fg"
                    android:drawableRight="@drawable/ic_add_circle"
                    android:padding="15dp"/>

                <TextView
                    android:id="@+id/specialityObstetrician"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Obstetrician/Gynecologist"
                    android:textColor="@color/black"
                    android:background="@drawable/txt_bg_fg"
                    android:drawableRight="@drawable/ic_add_circle"
                    android:padding="15dp"/>
                <TextView
                    android:id="@+id/specialityOncologist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Oncologist"
                    android:textColor="@color/black"
                    android:background="@drawable/txt_bg_fg"
                    android:drawableRight="@drawable/ic_add_circle"
                    android:padding="15dp"/>
                <TextView
                    android:id="@+id/specialityOphthalmologist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ophthalmologist"
                    android:textColor="@color/black"
                    android:drawableRight="@drawable/ic_add_circle"
                    android:padding="15dp"/>
                <TextView
                    android:id="@+id/specialityOrthopedic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Orthopedic Surgeon"
                    android:textColor="@color/black"
                    android:background="@drawable/txt_bg_fg"
                    android:drawableRight="@drawable/ic_add_circle"
                    android:padding="15dp"/>
                <TextView
                    android:id="@+id/specialityOtolaryngologist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Otolaryngologist (ENT)"
                    android:textColor="@color/black"
                    android:background="@drawable/txt_bg_fg"
                    android:drawableRight="@drawable/ic_add_circle"
                    android:padding="15dp"/>
                <TextView
                    android:id="@+id/specialityPathologist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pathologist"
                    android:textColor="@color/black"
                    android:background="@drawable/txt_bg_fg"
                    android:drawableRight="@drawable/ic_add_circle"
                    android:padding="15dp"/>
                <TextView
                    android:id="@+id/specialityPediatrician"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pediatrician"
                    android:textColor="@color/black"
                    android:background="@drawable/txt_bg_fg"
                    android:drawableRight="@drawable/ic_add_circle"
                    android:padding="15dp"/>
                <TextView
                    android:id="@+id/specialityPlastic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Plastic Surgeon"
                    android:textColor="@color/black"
                    android:background="@drawable/txt_bg_fg"
                    android:drawableRight="@drawable/ic_add_circle"
                    android:padding="15dp"/>
                <TextView
                    android:id="@+id/specialityPsychiatrist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Psychiatrist"
                    android:textColor="@color/black"
                    android:background="@drawable/txt_bg_fg"
                    android:drawableRight="@drawable/ic_add_circle"
                    android:padding="15dp"/>
                <TextView
                    android:id="@+id/specialityPulmonologist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pulmonologist"
                    android:textColor="@color/black"
                    android:background="@drawable/txt_bg_fg"
                    android:drawableRight="@drawable/ic_add_circle"
                    android:padding="15dp"/>
                <TextView
                    android:id="@+id/specialityPhysiotherapist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Physiotherapist"
                    android:textColor="@color/black"
                    android:background="@drawable/txt_bg_fg"
                    android:drawableRight="@drawable/ic_add_circle"
                    android:padding="15dp"/>
                <TextView
                    android:id="@+id/specialityRadiologist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Radiologist"
                    android:textColor="@color/black"
                    android:background="@drawable/txt_bg_fg"
                    android:drawableRight="@drawable/ic_add_circle"
                    android:padding="15dp"/>
                <TextView
                    android:id="@+id/specialityUrologist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Urologist"
                    android:textColor="@color/black"
                    android:background="@drawable/txt_bg_fg"
                    android:drawableRight="@drawable/ic_add_circle"
                    android:padding="15dp"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>